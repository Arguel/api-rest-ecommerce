<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Thumbnail</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <th scope="row">{{this.title}}</th>
        <td>{{this.price}}</td>
        <td class="text-center">
          <img src={{this.thumbnail}} alt={{this.title}} height="80px">
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
