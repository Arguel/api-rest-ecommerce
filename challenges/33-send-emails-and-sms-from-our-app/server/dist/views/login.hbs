<main>
  <section class="container-xxl">
    <!--Login-->
    <div class="m-5 p-5 bg-light-2">
      <h1 class="text-primary pt-3 mb-5">User login</h1>
      <form action="login" method="POST" accept-charset="utf-8">
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            placeholder="Username"
          />
          <label for="username">Username</label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Password"
          />
          <label for="password">Password</label>
        </div>
        <button class="btn btn-success btn-lg mt-4" type="submit">Login</button>
        <div class="fw-bold my-3">Or</div>
        <div
          class="fb-login-button"
          data-width=""
          data-size="large"
          data-button-type="login_with"
          data-layout="rounded"
          data-auto-logout-link="false"
          data-use-continue-as="false"
        ></div>
        <hr class="mt-4 mb-0" />
        <h5 class="mt-4 mb-0">You do not have an account?</h5>
        <a href="/register" class="btn btn-primary btn-lg mt-3">Register</a>
      </form>
    </div>
    <div id="fb-root"></div>
  </section>
  <script
    async
    crossorigin="anonymous"
    src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v12.0&appId=188719003307823&autoLogAppEvents=1"
    nonce="yCJKNyQi"
  ></script>
</main>
