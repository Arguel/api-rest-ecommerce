<main>
  <section class="container-xxl">
    <!--Login-->
    <div class="m-5 p-5 bg-light-2">
      <h1 class="text-primary pt-3 mb-5">User login</h1>
      <form action="login" method="POST" accept-charset="utf-8">
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            placeholder="Username"
          />
          <label for="username">Username</label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Password"
          />
          <label for="password">Password</label>
        </div>
        <button class="btn btn-success mt-4" type="submit">Login</button>
        <div class="fw-bold my-3">Or</div>
        <div>
          <a class="btn btn-primary" href="/api/auth/facebook">
            <i class="fab fa-facebook"></i>
            Login with Facebook
          </a>
        </div>
        <hr class="mt-4 mb-0" />
        <h5 class="mt-4 mb-0">You do not have an account?</h5>
        <a href="/api/auth/register" class="btn btn-primary mt-3">Register</a>
      </form>
    </div>
  </section>
</main>
