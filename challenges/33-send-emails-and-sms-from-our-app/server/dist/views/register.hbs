<main>
  <section class="container-xxl">
    <!--Register-->
    <div class="m-5 p-5 bg-light-2">
      <h1 class="text-primary pt-3 mb-5">User register</h1>
      <form action="register" method="POST" accept-charset="utf-8">
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            placeholder="Username"
          />
          <label for="username">Username</label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Password"
          />
          <label for="password">Password</label>
        </div>
        <button class="btn btn-success btn-lg mt-4" type="submit">
          Register
        </button>
        <hr class="mt-4 mb-0" />
        <h5 class="mt-4 mb-0">Do you already have an account?</h5>
        <a href="/api/auth/login" class="btn btn-primary btn-lg mt-3">Login</a>
      </form>
    </div>
  </section>
</main>
