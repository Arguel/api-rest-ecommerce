extends blocks/layout.pug

block content
  div(class="m-5 p-5 bg-light-2")
    h1(class="text-primary pt-3 mb-3") Enter product
    form(
      class="row g-3 mb-3"
      action="products"
      method="POST"
      accept-charset="utf-8"
      )
    
      div(class="col-12")
        label(class="form-label" for="title") Item title
        input(
          class="form-control"
          type="text"
          name="title"
          id="title"
          placeholder="item title"
          )
      div(class="col-12")
        label(class="form-label" for="price") Item price
        input(
          class="form-control"
          type="number"
          name="price"
          id="price"
          value="1"
          )
      div(class="col-12")
        label(class="form-label" for="thumbnail") Item thumbnail
        input(
          class="form-control"
          type="text"
          name="thumbnail"
          id="thumbnail"
          placeholder="Eg. './img/pato.png'"
          )
      div(class="col-12")
        button(class="btn btn-success" type="submit") Submit
    hr 
    table(class="table table-dark table-striped mb-3")
      thead
        tr
          th Name
          th Price
          th Thumbnail
      tbody(id="tableBody")
        each product in products
          tr
            th(scope="row") #{product.title}
            td #{product.price}
            td(class="text-center")
              img(src=product.thumbnail, alt=product.title, height="80px")
